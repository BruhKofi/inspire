<div class="container-fluid text-center">
<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form">
    <%= f.input :name, required: true, autofocus: true, class: 'form-group' %>
    <%= f.input :email, required: true, class: 'form-group' %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), class: 'form-group' %>
    <%= f.input :password_confirmation, required: true, class: 'form-group' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
